{
  "name": "bigtest-sample",
  "version": "0.0.2",
  "description": "BigTest Sample App",
  "repository": "https://github.com/thefrontside/bigtest.git",
  "author": "Frontside Engineering <engineering@frontside.com>",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "node bin/start.js -Y",
    "build": "parcel build src/index.html --no-cache",
    "lint": "echo no-op",
    "cypress:run": "yarn cypress run --spec 'src/test/cypress.spec.js'",
    "test:jest": "jest 'src/test/jest.test.js'",
    "test:cypress": "start-server-and-test 'yarn start -p 3000' http://localhost:3000 cypress:run",
    "test:bigtest": "yarn bigtest ci"
  },
  "bin": {
    "sample": "./bin/setup.js"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "cross-spawn": "^7.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@effection/events": "^0.7.8",
    "@effection/node": "^0.9.1",
    "@testing-library/react": "^11.1.0",
    "babel-jest": "^26.6.3",
    "bigtest": "*",
    "cypress": "^6.0.1",
    "effection": "^0.7.0",
    "eslint": "^7.17.0",
    "eslint-plugin-cypress": "^2.11.2",
    "jest": "^26.6.3",
    "jest-css-modules-transform": "^4.1.0",
    "parcel": "^1.12.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "rmfr": "^2.0.0",
    "start-server-and-test": "^1.11.6",
    "ts-jest": "^26.4.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:cypress/recommended"
    ]
  },
  "browserslist": [
    "defaults",
    "not op_mob > 1"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": true
          }
        }
      ],
      "@babel/preset-react"
    ]
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-babel",
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".+\\.(css|styl|less|sass|scss)$": "jest-css-modules-transform"
    }
  },
  "volta": {
    "node": "12.16.0",
    "yarn": "1.19.1"
  }
}
